@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp;Create New Category</a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach(var cat in Model)
        {
            <tr>
                <td width="50%">
                    @cat.Name
                </td>
                <td width="30%">
                    @cat.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary m-2"><i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>